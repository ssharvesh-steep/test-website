{
  "name": "interview-tester",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:app": "npm run build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on http://localhost:5173 && electron .",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\""
  },
  "build": {
    "appId": "com.interview.tester",
    "productName": "InterviewTester",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "extendInfo": {
        "NSCameraUsageDescription": "This app requires camera access for proctoring purposes.",
        "NSMicrophoneUsageDescription": "This app requires microphone access for proctoring purposes."
      }
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}